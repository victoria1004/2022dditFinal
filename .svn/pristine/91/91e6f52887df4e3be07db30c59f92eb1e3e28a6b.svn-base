	<!-- 
	오류 상태 코드를 사용한 이동 대상 페이지 설정
	 - 400 오류(Bad Request) : 문법 오류 
	 - 404 오류 : 파일이 없어서 발생.
	 - 500 오류 : 서버 내부 프로그램 오류
	-->
	
	<error-page>
		<error-code>400</error-code>
		<location>/error/400</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/404</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/500</location>
	</error-page>
	
	<!-- 
	예외 타입을 사용한 이동 대상 페이지 설정 
	 - 수정 화면 생성 시 뷰 파일(jsp)에서 오류 발생
	 - 삭제 시 메퍼 xml에서 예외 발생
	 - 없는 게시물 조회
	 - 없는 URL 요청시 예외 발생
	 
	 - 등록 시 제목에 빈 값 입력하여 유효값 검증 예회 발생(x)
	-->
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error/Exception</location>
	</error-page>
	
	<!-- 
	502 : Bad gateway(게이트웨이 상태 나쁨)
	505 : HTTP 버전 비지원 오류
	403.4 : 접근하려는 페이지가 SSL로 보안유지 되고 있는 오류
	-->
	<!-- 기본 이동 대상 설정 -->
	<error-page>
		<location>/error/error</location>
	</error-page>
	
</web-app>
